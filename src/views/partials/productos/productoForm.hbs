<div class="card card-body p-4 rounded-0">

  <h3>Agrega un Producto</h3>

  <form action="/producto/agregar" method="POST">

    <div>
      <label for="producto">Producto:</label>
      <input type="text" name="nombreProducto" placeholder="Nombre del Producto" id="producto" class="form-control rounded-0" />
    </div>

    <div>
      <label for="descripcion">Descripcion del producto:</label>
      <textarea name="descripcion" placeholder="ej: 16 kg, 24 unidades/caja" id="descripcion" class="form-control rounded-0"></textarea>
    </div>

    <div>
      <label for="precioMayorista">Precio Mayorista:</label>
      <input type="text" name="precioMayorista" placeholder="ej: 150" id="precioMayorista" class="form-control rounded-0"></input>
    </div>

    <div>
      <label for="precioMinorista">Precio Minorista:</label>
      <input type="text" name="precioMinorista" placeholder="ej: 280" id="precioMinorista" class="form-control rounded-0"></input>
    </div>

    <button class="btn btn-primary btn-sm mt-2">Agregar Producto</button>

  </form>


</div>